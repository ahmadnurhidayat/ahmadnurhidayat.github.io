---
import BaseLayout from '../layouts/BaseLayout.astro';
import PostCard from '../components/PostCard.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { getCollection } from 'astro:content';

const allPosts = (await getCollection('posts', ({ data }) => !data.draft))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const allProjects = (await getCollection('projects', ({ data }) => !data.draft))
  .sort((a, b) => {
    if (a.data.pinned && !b.data.pinned) return -1;
    if (!a.data.pinned && b.data.pinned) return 1;
    return parseInt(b.data.year) - parseInt(a.data.year);
  });

const featuredPosts = allPosts.slice(0, 3);
const featuredProjects = allProjects.slice(0, 3);

const skills = [
  "Cloud Native Technologies",
  "Linux System Administration",
  "Kubernetes & Docker",
  "CI/CD Automation",
  "Cloud Platforms (AWS, GCP, Alibaba Cloud)",
  "Iac (Terraform & Ansible)",
  "Observability (Prometheus, Grafana, ELK Stack)",
];
---

<BaseLayout>
  <!-- Hero Section -->
  <section class="relative min-h-[calc(100vh-5rem)] flex items-center justify-center overflow-hidden bg-grid-pattern">
    <!-- Grid Background needs to be strict to the section or global? Using utility class on section -->
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full py-12 lg:py-0">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-8 items-center">
        <!-- Text Content -->
        <div class="space-y-8 animate-fade-in order-2 lg:order-1">
          <div>
            <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold tracking-tight text-gray-900 dark:text-white">
              Hello, I'm <span class="bg-yellow-300 dark:bg-yellow-500 text-gray-900 px-2 transform -rotate-1 inline-block">Ahmad.</span>
            </h1>
            <div class="mt-6 text-xl md:text-2xl font-medium text-gray-700 dark:text-dark-300">
              <span class="bg-yellow-200 dark:bg-yellow-500/20 dark:text-yellow-300 px-1">DevOps Engineer & Cloud Platform Engineer</span> with +-3 years of experience.
            </div>
          </div>

          <p class="text-lg text-gray-600 dark:text-dark-400 max-w-xl leading-relaxed">
            I specialize in cloud infrastructure, automation, and distributed systems. 
            Building resilient, scalable, and secure platforms is what I do best.
          </p>

          <div>
            <h3 class="text-sm font-semibold text-gray-900 dark:text-white uppercase tracking-wider mb-4">Expertise in:</h3>
            <ul class="grid grid-cols-1 sm:grid-cols-2 gap-x-4 gap-y-2 text-gray-600 dark:text-dark-400 hover:text-gray-900 dark:hover:text-dark-300 transition-colors">
              {skills.map((skill) => (
                <li class="flex items-center gap-2 text-sm md:text-base">
                  <span class="text-primary-600 dark:text-accent">â€¢</span>
                  {skill}
                </li>
              ))}
            </ul>
          </div>

          <div class="flex items-center gap-4 pt-2">
            <a href="https://github.com/ahmadnurhidayat" target="_blank" rel="noopener" class="p-2 text-gray-600 hover:text-gray-900 dark:text-dark-400 dark:hover:text-white transition-colors">
